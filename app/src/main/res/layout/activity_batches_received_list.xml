<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ubits.payflow.payflow_network.BatchesReceived.BatchesReceivedList">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/driver_color"/>
    <LinearLayout
        android:background="@color/driver_background"
        android:id="@+id/linearlayout"
        android:layout_below="@+id/toolbar1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="4">
        <TextView
            android:id="@+id/driver_batches_received"
            android:layout_marginTop="50dp"
            android:textColor="#000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Batches Received"
            android:textSize="25dp"/>

        <LinearLayout
            android:layout_marginTop="30dp"
            android:layout_marginBottom="100dp"
            android:layout_weight="2"
            android:id="@+id/linearcheck"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ListView
                android:id="@+id/batches_received_listview"
                android:divider="#000000"
                android:dividerHeight="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:layout_weight="1"
        android:padding="@dimen/_10sdp"
        android:layout_alignBottom="@id/linearlayout"
        android:id="@+id/btnreceive"
        android:layout_width="@dimen/_200sdp"
        android:layout_height="?actionBarSize"
        android:background="@color/driver_color"
        android:textColor="@color/white"
        android:text="Proceed"
        android:textSize="25sp"
        android:gravity="center"
        android:layout_marginBottom="@dimen/_6sdp"

        android:layout_centerHorizontal="true"/>
</RelativeLayout>
