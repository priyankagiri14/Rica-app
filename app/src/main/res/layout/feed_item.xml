<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="20dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:gravity="left"
    android:background="@drawable/bottom_border_on_light">
    <androidx.cardview.widget.CardView
        android:id="@+id/cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp">
    </androidx.cardview.widget.CardView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <TextView
            android:id="@+id/titlePack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greenontrack"
            android:textSize="16sp"
            android:text="gsgsggsgsgsgsgsgsgsggsgssgsgsgsggssgsggsgsgsgsg"
            android:typeface="sans"
            android:textStyle="normal"/>
        <TextView
            android:id="@+id/titleRetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/greenontrack"
            android:textSize="12sp"
            android:text="r1414144141414141"
            android:layout_below="@+id/titlePack"
            android:layout_marginTop="10dp"
            android:typeface="sans"
            android:textStyle="bold"/>
        <Button
            android:layout_alignParentRight="true"
            android:layout_below="@+id/titlePack"
            android:id="@+id/buttonProceed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Proceed"
            android:layout_marginTop="10dp"
            android:background="@color/greenontrack"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:typeface="sans"
            android:textStyle="normal"/>

    </RelativeLayout>

</LinearLayout>